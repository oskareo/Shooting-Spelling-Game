<Window x:Name="menuWindow" x:Class="Application_Dev_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Dev_Project"
        mc:Ignorable="d"
        Title="Main Menu" Height="350" Width="525">
    <Grid x:Name="mainGameMenu">
        <Button x:Name="playGameBtn" Content="Play Game" HorizontalAlignment="Left" Margin="213,58,0,0" VerticalAlignment="Top" Width="75" Click="playGameBtn_Click" Background="#FF2A83EE"/>
        <Button x:Name="settingsBtn" Content="Settings" HorizontalAlignment="Left" Margin="213,108,0,0" VerticalAlignment="Top" Width="75" Background="#FF98E217" Click="settingsBtn_Click"/>
        <Button x:Name="instructionsBtn" Content="Instructions" HorizontalAlignment="Left" Margin="213,158,0,0" VerticalAlignment="Top" Width="75" Background="#FFE4D220" Click="instructionsBtn_Click"/>
        <Button x:Name="exitBtn" Content="Exit" HorizontalAlignment="Left" Margin="213,208,0,0" VerticalAlignment="Top" Width="75" Background="#FFCF1F1F" Click="exitBtn_Click"/>

    </Grid>
</Window>